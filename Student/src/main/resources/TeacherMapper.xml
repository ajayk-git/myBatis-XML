<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.mybatis.Student.mappers.TeacherMapper">


    <resultMap id="teacherResultMap" type="com.mybatis.Student.entities.Teacher">
        <result property="studentId" column="studentId"/>

        <result property="firstName" column="firstName"/>

        <result property="lastName" column="lastName"/>

        <result property="fatherName" column="fatherName"/>

        <result property="city" column="city"/>

        <result property="contactNumber" column="contactNumber"/>

        <result property="standard" column="standard"/>

        <result property="isDeleted" column="isDeleted"/>

        <result property="isActive" column="isActive"/>

    </resultMap>

    <select id="getAllTeachers" resultType="Teacher">
        select * from Teacher;
    </select>
</mapper>